
@{
    ViewData["Title"] = "career";
}
    <section>
    <div class="bg-holder overlay" style="background-position:center bottom;margin-top:2px">
        <img src="~/img/background-2.jpg" />
    </div>
      <!--/.bg-holder-->
      <div class="container">
        <div class="row pt-6" data-inertia='{"weight":1.5}'>
          <div class="col-md-8 text-white" data-zanim-timeline="{}" data-zanim-trigger="scroll">
            <div class="overflow-hidden">
              <h1 class="text-white fs-4 fs-md-5 mb-0 lh-1" data-zanim-xs='{"delay":0}'>Career</h1>
              <div class="nav" aria-label="breadcrumb" role="navigation" data-zanim-xs='{"delay":0.1}'>
                <ol class="breadcrumb fs-1 ps-0 fw-bold">
                            <li class="breadcrumb-item"><a class="text-white" asp-controller="Home" asp-action="Index">Home</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Career</li>
                </ol>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  
    <main class="main" id="top">
    <section class="bg-100 " style="padding: 50px 0; background-color: #f1f3f5;" >          
        <div class="container">
                <div class="text-center mb-6">
                    <h3 class="fs-2 fs-md-3">Requirements</h3>
                    <hr class="short" data-zanim-xs='{"from":{"opacity":0,"width":0},"to":{"opacity":1,"width":"4.20873rem"},"duration":0.8}' data-zanim-trigger="scroll" style="border: 2px solid #dc3545; width: 4.20873rem; margin: 10px auto;" />
                </div>
          <div class="row justify-content-center mb-4">
            <!-- Job 1: Business Development Executive -->
            <div class="col-12 col-md-10 col-lg-12 p-2">
              <div class="card h-100">
                <div class="card-body p-4">
                  <div class="job-card">
                    
                    <div class="job-details flex-grow-1">
                      <div class="mb-3">
                        <span class="job-label bg-primary text-white px-3 py-1 rounded-pill">Business Development</span>
                      </div>
                      <h5 class="job-title text-1100 mb-2">Business Development Executive</h5>
                      <p class="job-desc text-900 mb-2">Drive business growth through market research, client acquisition, and relationship management.</p>
                      <div class="job-meta text-800 d-flex gap-3">
                        <span><i class="fas fa-clock"></i> Full Time</span>
                        <span><i class="fas fa-building"></i> On-site</span>
                        <span><i class="fas fa-users"></i> 2 Vacancies</span>
                      </div>
                    </div>
                    <a href="#job1Details" class="view-job-btn" data-bs-toggle="collapse" aria-expanded="false" aria-controls="job1Details">
                      View Job <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                  </div>
                  <div class="collapse" id="job1Details">
                    <hr class="my-3" />
                    <h6 class="text-1100 mb-2">Job Description</h6>
                    <p class="text-900">
                      We are looking for a dynamic Business Development Executive to expand our market presence. Responsibilities include:
                      <ul class="text-900">
                        <li>Conducting market research to identify new opportunities.</li>
                        <li>Building and maintaining client relationships.</li>
                        <li>Developing and implementing growth strategies.</li>
                      </ul>
                      <strong class="text-1100">Requirements:</strong> MBA, 1 year of experience, strong communication and negotiation skills.
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <!-- Job 2: Java Developer -->
            <div class="col-12 col-md-10 col-lg-12 p-2">
              <div class="card h-100">
                <div class="card-body p-4">
                  <div class="job-card">
                    
                    <div class="job-details flex-grow-1">
                      <div class="mb-3">
                        <span class="job-label bg-primary text-white px-3 py-1 rounded-pill">Engineering</span>
                      </div>
                      <h5 class="job-title text-1100 mb-2">Java Developer</h5>
                      <p class="job-desc text-900 mb-2">Develop and maintain robust Java-based applications with a focus on innovation.</p>
                      <div class="job-meta text-800 d-flex gap-3">
                        <span><i class="fas fa-clock"></i> Full Time</span>
                        <span><i class="fas fa-building"></i> On-site</span>
                        <span><i class="fas fa-users"></i> 2 Vacancies</span>
                      </div>
                    </div>
                    <a href="#job2Details" class="view-job-btn" data-bs-toggle="collapse" aria-expanded="false" aria-controls="job2Details">
                      View Job <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                  </div>
                  <div class="collapse" id="job2Details">
                    <hr class="my-3" />
                    <h6 class="text-1100 mb-2">Job Description</h6>
                    <p class="text-900">
                      We are seeking fresh Java developers to join our team. Responsibilities include:
                      <ul class="text-900">
                        <li>Writing clean and efficient Java code.</li>
                        <li>Participating in code reviews and testing.</li>
                        <li>Learning and implementing new technologies.</li>
                      </ul>
                      <strong class="text-1100">Requirements:</strong> Fresher, knowledge of Core Java and OOP concepts, willingness to learn.
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <!-- Job 3: Digital Marketing -->
            <div class="col-12 col-md-10 col-lg-12 p-2">
              <div class="card h-100">
                <div class="card-body p-4">
                  <div class="job-card">
                    
                    <div class="job-details flex-grow-1">
                      <div class="mb-3">
                        <span class="job-label bg-success text-white px-3 py-1 rounded-pill">Marketing</span>
                      </div>
                      <h5 class="job-title text-1100 mb-2">Digital Marketing Specialist</h5>
                      <p class="job-desc text-900 mb-2">Create and manage digital marketing campaigns to enhance brand visibility.</p>
                      <div class="job-meta text-800 d-flex gap-3">
                        <span><i class="fas fa-clock"></i> Full Time</span>
                        <span><i class="fas fa-building"></i> On-site</span>
                        <span><i class="fas fa-users"></i> 1 Vacancy</span>
                      </div>
                    </div>
                    <a href="#job3Details" class="view-job-btn" data-bs-toggle="collapse" aria-expanded="false" aria-controls="job3Details">
                      View Job <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                  </div>
                  <div class="collapse" id="job3Details">
                    <hr class="my-3" />
                    <h6 class="text-1100 mb-2">Job Description</h6>
                    <p class="text-900">
                      We need a Digital Marketing Specialist to drive online growth. Responsibilities include:
                      <ul class="text-900">
                        <li>Managing SEO and SEM campaigns.</li>
                        <li>Creating content for social media and websites.</li>
                        <li>Analyzing campaign performance.</li>
                      </ul>
                      <strong class="text-1100">Requirements:</strong> 1-2 years of experience, knowledge of Google Analytics and digital tools.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Upload Resume Section -->
          <div class="card">
            <div class="card-body h-100 p-5">
              <h5 class="mb-3">Upload Your Resume</h5>
              <form>
                <div class="mb-4">
                  <input class="form-control bg-white fw-bold" type="text" placeholder="Your Name" required="required" />
                </div>
                <div class="mb-4">
                  <input class="form-control bg-white fw-bold" type="email" placeholder="Email" required="required" />
                </div>
                <div class="mb-4">
                  <label for="resumeUpload" class="form-label fw-bold">Upload Resume (PDF, DOCX)</label>
                  <input class="form-control bg-white fw-bold" type="file" id="resumeUpload" accept=".pdf,.docx" required="required" />
                </div>
                <button class="btn btn-md-lg btn-primary" type="submit">
                  <span class="color-white fw-600">Submit Application</span>
                </button>
              </form>
            </div>
          </div>
        </div>
    </section>
    </main>